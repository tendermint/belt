{
    "name":            "@tendermint/belt",
    "description":     "A utility belt for TypeScript + JavaScript",
    "license":         "Apache-2.0",
    "repository":      {
        "type": "git",
        "url":  "https://github.com/cosmos/belt.git"
    },
    "publishConfig":   {
        "access": "public"
    },
    "engines":         {
        "node": ">=10"
    },
    "version":         "0.1.0",
    "main":            "index.js",
    "scripts":         {
        "build":          "rm -rf dist/* && webpack --config build --progress --colors --display-error-details",
        "build:dev":      "NODE_ENV=development yarn build",
        "build:prod":     "NODE_ENV=production yarn build",
        "dirs":           "mkdir -p dist",
        "dist:dev":       "yarn build:dev",
        "dist:prod":      "yarn build:prod && yarn gzip",
        "docs":           "rm -rf docs/* && typedoc src/*.ts",
        "gzip":           "gzip -kf dist/*.{js,map}",
        "lint":           "eslint --ext .ts,.js .",
        "nuke":           "rm -rf **/node_modules yarn.lock",
        "prepublishOnly": "yarn dirs && yarn lint && yarn tsc && yarn dist:prod && yarn test",
        "reset":          "yarn nuke && yarn",
        "setup":          "yarn dirs && yarn lint && yarn tsc && yarn dist:dev",
        "test":           "jest --config test/jest.config.json",
        "tsc":            "rm -rf types/* && tsc",
        "watch":          "yarn build:dev --watch"
    },
    "dependencies":    {
    },
    "devDependencies": {
        "@babel/core":                      "7.7.2",
        "@babel/preset-env":                "7.7.1",
        "@babel/preset-typescript":         "7.7.2",
        "@types/bech32":                    "1.1.1",
        "@types/jest":                      "24.0.22",
        "@types/node":                      "12.12.7",
        "@typescript-eslint/eslint-plugin": "2.6.1",
        "@typescript-eslint/parser":        "2.6.1",
        "babel-loader":                     "8.0.6",
        "eslint":                           "6.6.0",
        "eslint-loader":                    "3.0.2",
        "eslint-plugin-node":               "10.0.0",
        "jest":                             "24.9.0",
        "ts-jest":                          "24.1.0",
        "ts-loader":                        "6.2.1",
        "ts-node":                          "8.4.1",
        "typedoc":                          "0.15.0",
        "typescript":                       "3.7.2",
        "webpack":                          "4.41.2",
        "webpack-cli":                      "3.3.10",
        "webpack-merge":                    "4.2.2"
    },
    "files":           [
        "dist",
        "src/**/*.{ts,js}",
        "types/**/*.ts",
        "index.ts",
        "index.d.ts",
        "index.js",
        "LICENSE",
        "package.json",
        "README.md",
        "tsconfig.json",
        "yarn.lock"
    ]
}
